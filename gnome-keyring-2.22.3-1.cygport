inherit gnome2

DESCRIPTION="GNOME Desktop password management system"

CYGCONF_ARGS="
	--libexecdir=/usr/lib/gnome-keyring
	--disable-hal
	--disable-pam
"

DOCS="file-format.txt keyring-intro.txt"

PKG_NAMES="${PN} ${PN}-devel"
PKG_HINTS="setup devel"
PKG_CONTENTS[0]="--exclude=gtk-doc etc/ usr/bin/ usr/lib/${PN}/ usr/share/"
PKG_CONTENTS[1]='usr/include/ usr/lib/lib* usr/lib/pkgconfig/ usr/share/gtk-doc/'
